{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "gdb",
				"program": "${workspaceFolder}/output/main"
			},
			"osx": {
				"MIMode": "lldb",
				"miDebuggerPath": "/Applications/Xcode.app/Contents/Developer/usr/bin/lldb",
				"program": "${workspaceFolder}/output/main"
			},
			"windows": {
				"MIMode": "gdb",
				"miDebuggerPath": "gdb.exe",
				"program": "${workspaceFolder}/output/main.exe"
			},
			"preLaunchTask": "build & run"
		}
	]
}
